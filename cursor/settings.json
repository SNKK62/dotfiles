{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.cursorBlinking": "solid",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.orientation": "vertical",
  "editor.renderWhitespace": "all",
  "files.trimTrailingWhitespace": true,
  "editor.stickyScroll.enabled": true,
  "workbench.sideBar.location": "right",
  "[json][jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[typescript]": {
    "editor.indentSize": 2,
    "editor.insertSpaces": true
  },
  "[typescriptreact]": {
    "editor.indentSize": 2,
    "editor.insertSpaces": true
  },
  "[rust]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
    // "editor.inlayHints.enabled": "offUnlessPressed"
  },
  "[markdown]": {
    "editor.indentSize": 2
  },
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,
  // "rust-analyzer.rustfmt.overrideCommand": [
  //   "rustup",
  //   "run",
  //   "nightly",
  //   "rustfmt",
  //   "--unstable-features"
  // ],
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.extraArgs": ["--", "-A", "clippy::needless_return"],
  "terminal.integrated.inheritEnv": false,
  "workbench.editorAssociations": {
    "*.rds": "default"
  },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "indentRainbow.colors": [
    "rgba(255, 0, 0, 0.2)",
    "rgba(255, 127, 0, 0.2)",
    "rgba(255, 255, 0, 0.2)",
    "rgba(0, 255, 0, 0.2)",
    "rgba(0, 0, 255, 0.2)"
  ],
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "path-intellisense.absolutePathToWorkspace": true,
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    // 選択範囲の背景色と境界線の色
    "editor.selectionBackground": "#7883e182", // 選択範囲の背景色
    // カーソルを合わせた単語と同じ単語の背景色と境界線の色
    "editor.wordHighlightBackground": "#66b3ff10", // カーソルを合わせた単語と同じ単語の背景色
    "editor.wordHighlightBorder": "#66b3ff55", // カーソルを合わせた単語と同じ単語の境界線の色
    // 検索で一致したすべての結果の背景色と境界線の色
    "editor.findMatchHighlightBackground": "#ff6f6f10", // 検索で一致したすべての結果の背景色
    "editor.findMatchHighlightBorder": "#ff6f6f55", // 検索で一致したすべての結果の境界線の色
    // カーソルがある行の背景色と境界線の色
    "editor.lineHighlightBackground": "#00fff210", // カーソルがある行の背景色
    // ホバー時の背景色
    "editor.hoverHighlightBackground": "#66b3ff55" // ホバー時の背景色
  },
  "cSpell.userWords": [
    "autoincrement",
    "cmdline",
    "datasource",
    "markuplint",
    "neovim",
    "noto",
    "phind",
    "rgba",
    "signup",
    "tailwindcss",
    "Usecase"
  ],
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "HackGen35ConsoleNF-Regular",
  "window.commandCenter": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-f>": false
  },
  // "vim.insertModeKeyBindings": [
  //     {
  //     "before": ["j", "j"],
  //     "after": ["<Esc>"]
  //     }
  // ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "a", "c"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<leader>", "d", "f"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "d", "d"],
      "commands": ["workbench.action.closePanel"]
    },
    {
      "before": ["<leader>", "d", "i"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["<leader>", "d", "n"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "d", "p"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "d", "y"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["M"],
      "after": ["%"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["<C-o>"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["<Esc>", "<Esc>"],
      "after": [":", "n", "o", "h", "l", "<CR>"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["<leader>", "r", "f"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["<leader>", "r", "h"],
      "commands": ["editor.showCallHierarchy"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["X"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<Right>"],
      "after": ["1", "1", "l"]
    },
    {
      "before": ["<Left>"],
      "after": ["1", "1", "h"]
    },
    {
      "before": ["<Up>"],
      "after": ["1", "0", "k"]
    },
    {
      "before": ["<Down>"],
      "after": ["1", "0", "j"]
    },
    {
      "before": ["'", "'"],
      "after": ["$"]
    },
    {
      "before": [";", ";"],
      "after": ["^"]
    },
    {
      "before": ["<Esc>", "<Esc>"],
      "after": [":", "n", "o", "h", "l", "<CR>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["M"],
      "after": ["%"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["<Right>"],
      "after": ["1", "1", "l"]
    },
    {
      "before": ["<Left>"],
      "after": ["1", "1", "h"]
    },
    {
      "before": ["<Up>"],
      "after": ["1", "0", "k"]
    },
    {
      "before": ["<Down>"],
      "after": ["1", "0", "j"]
    },
    {
      "before": ["'", "'"],
      "after": ["$", "h"]
    },
    {
      "before": [";", ";"],
      "after": ["^"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "after": ["P"]
    }
  ]
}
